[color]
	ui = auto
[fetch]
  	prune = true
[push]
	autoSetupRemote = true
	default = upstream
[help]
	autocorrect = 1
[alias]
	lg = !git log --pretty=format:\"%C(cyan)%h%Creset -%C(bold blue)%d%Creset %s %C(dim green) (%cr) [%an]\" --abbrev-commit -30
	c = !git add -A && git commit
	p = !git push origin $(git rev-parse --abbrev-ref HEAD)
[init]
	defaultBranch = main
