[core]
	autocrlf = input
	ignorecase = false
	whitespace = cr-at-eol
	editor = nvim
	pager = bat
	repositoryformatversion = 0
	filemode = true
	bare = false
	logallrefupdates = true
	precomposeunicode = true
	excludesFile = ~/.gitignore
